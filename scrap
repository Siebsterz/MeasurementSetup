def fadeInLED():
    for i in range(10):
        if turnOff.read() == 1:
            break
        led.write(i/10)
        time.sleep(0.05)

def fadeOutLED():
    for i in reversed(range(10)):
        if turnOff.read() == 1:
            break
        led.write(i/10)
        time.sleep(0.05)


while True:
        fadeInLED()
        if turnOff.read() == 1:
            break
        fadeOutLED()
        if turnOff.read() == 1:
            break

if turnOff.read() == 1:
    led.write(0)
